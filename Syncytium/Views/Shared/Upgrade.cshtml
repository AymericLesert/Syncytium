@{
    Layout = "~/Views/Shared/Default.cshtml";
    ViewBag.Title = Model.GetLabel("UPGRADE");
}

@section CSSDeclaration
{
    <link rel="stylesheet" type="text/css" href="~/Content/Styles/GUI/Button/Button.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles/Tools/Support.css" />
}

@section JSDeclaration
{
    <script type="text/javascript">
        function load() { }
    </script>
}

<div class="support">
    @if (Model.Ressources.DefaultLanguage.Equals("FR"))
    {
        <h1>La mise à jour de la base de données a été réalisée avec succés!</h1>
        <input type="button" class="button" value="@Model.GetLabel("BTN_OK")" onclick='javascript:window.location="@(Model.UrlRoot)Administration/User/Signout"' />
    }
</div>