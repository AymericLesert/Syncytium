@{
    ViewBag.Area = "AREA_ADMINISTRATION";

    Layout = "~/Views/Shared/Main.cshtml";
}

@section JSDeclaration
{
    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/Administration.js")" charset="iso-8859-1"></script>

    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/User/Board.js")" charset="iso-8859-1"></script>

    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/Language/Board.js")" charset="iso-8859-1"></script>

    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/Module/ListArray.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/Module/Box.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/Module/Board.js")" charset="iso-8859-1"></script>

    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/UserModule/ListArray.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/UserModule/Box.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Administration/UserModule/Board.js")" charset="iso-8859-1"></script>

    <script src="@Model.AddSource("/Content/Scripts/Areas/Administratif/Menu/PDF.js")" charset="iso-8859-1"></script>

    <script type="text/javascript">
    var administration = null;

    /*
        * Load the current profil of the user (for an administrator profile)
        * In : login : login of the current user
        */
    function load() {
        Logger.Instance.setModule("@ViewBag.Area", "@Model.Version");

        administration = new Administration(@Model.ModuleId);

        // Initialize the database manager

        DSDatabase.Instance.Area = administration;
        DSDatabase.Instance.start();
    }
    </script>
}

@section CSSDeclaration
{
    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Administration/Administration.css")" />

    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Administration/Module/Box.css")" />
    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Administration/Module/Board.css")" />

    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Administration/UserModule/Box.css")" />
    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Administration/UserModule/Board.css")" />
}
