@{
    ViewBag.Area = "AREA_CUSTOMER";

    Layout = "~/Views/Shared/Main.cshtml";
}

@section JSDeclaration
{
    <script src="@Model.AddSource("/Content/Scripts/Areas/Customer/Customer.js")" charset="iso-8859-1"></script>

    <script src="@Model.AddSource("/Content/Scripts/Areas/Customer/Parameter/Enum.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Customer/Parameter/List.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Customer/Parameter/ListArray.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Customer/Parameter/Box.js")" charset="iso-8859-1"></script>
    <script src="@Model.AddSource("/Content/Scripts/Areas/Customer/Parameter/Board.js")" charset="iso-8859-1"></script>

    <script type="text/javascript">
        var customer = null;

        /*
            * Load the current profil of the user (for an administrator profile)
            * In : login : login of the current user
            */
        function load() {
            Logger.Instance.setModule("@ViewBag.Area", "@Model.Version");

            customer = new Customer(@Model.ModuleId);

            // Initialize the database manager

            DSDatabase.Instance.Area = customer;
            DSDatabase.Instance.start();
        }
    </script>
}

@section CSSDeclaration
{
    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Customer/Customer.css")" />

    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Customer/Parameter/Box.css")" />
    <link rel="stylesheet" type="text/css" href="@Model.AddSource("/Content/Styles/Areas/Customer/Parameter/Board.css")" />
}
